[core]
  excludesfile = ~/.gitignore
  editor = /usr/local/bin/nvim

[include]
	path = gitconfig.local

[help]
	autocorrect = 1

[color]
  ui = always

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red 
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[merge]
  tool = opendiff

[push]
  default = simple 

[user]
  name = Jamie Stackhouse
  email = (none)

# rewrites
[url "git@github.com:itsjamie/"]
  insteadOf = "git://github.com/itsjamie/"
[url "ssh://git@stash.redspace.com/"]
	insteadOf = https://stash.redspace.com/scm/
[alias]
	co = checkout
	publish = !BRANCH=$(git rev-parse --abbrev-ref HEAD) && git push -u origin $BRANCH
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
